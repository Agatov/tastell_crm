source 'https://rubygems.org'

gem 'rails', '3.2.12'

gem 'sqlite3'
gem 'mysql2', '0.3.12b4'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem "thin"
end

gem 'rmagick'
gem 'carrierwave'

gem 'jquery-rails'

gem 'haml-rails'

gem 'simple_enum'

gem 'simple_form'
gem 'kaminari'
gem 'russian'
gem 'thinking-sphinx'

# Use unicorn as the app server
gem 'unicorn'

# Deploy with Capistrano
gem 'capistrano'

